            android:name=".SharedPreferencesActivity"
            android:exported="false"
            android:label="@string/title_activity_shared_preferences"
            android:theme="@style/Theme._522LabLearnAndroid" />
        <activity
            android:name=".MenuActivity"
            android:exported="true"
            android:label="@string/title_activity_menu"
            android:theme="@style/Theme._522LabLearnAndroid">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LifeCycleComposeActivity"
            android:exported="false"
            android:label="LifeCycleComposeActivity"
            android:theme="@style/Theme._522LabLearnAndroid" />
        <activity
            android:name=".PokedexActivity"
            android:exported="false"
            android:label="PokedexActivity"
            android:theme="@style/Theme._522LabLearnAndroid" />
        <activity
            android:name=".RPGCardActivity"
            android:exported="false"
            android:label="RPGCardActivity"
            android:theme="@style/Theme._522LabLearnAndroid"></activity>
    </application>

</manifest>